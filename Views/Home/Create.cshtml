@{
    ViewData["Title"] = "Home Page";
}
@model Chef

<div class="text-center">
    <h2>Create a new Chef!</h2>
    <a href="/">Home</a>
    <hr>
    <form asp-action="add" method="post" asp-controller="Home">
        <div class="form-group">
            <label asp-for="Name">Chef's Name:</label>
            <input class="form-control" asp-for="Name">
            <span class="alert-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Birthday">Chef Birthday:</label>
            <input class="form-control" asp-for="Birthday">
            <span class="alert-danger" asp-validation-for="Birthday"></span>
        </div>

        <input type="submit" value="Add Chef" class="btn btn-success">
    </form>
</div>