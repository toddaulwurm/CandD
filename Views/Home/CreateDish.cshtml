@{
    ViewData["Title"] = "Home Page";
}
@model Dish

<div class="text-center">
    <h2>Create a new Dish!</h2>
    <a href="/">Home</a>
    <hr>
    <form asp-action="addDish" method="post" asp-controller="Home">
        <div class="form-group">
            <label asp-for="ChefId">Chef's Name:</label>
            <select class="form-control" asp-for="ChefId">
                @{
                    foreach(Chef singleChef in ViewBag.AllChefs)
                    {
                        <option value="@singleChef.ChefId">@singleChef.Name</option>
                    }
                }
            </select>
            <span class="alert-danger" asp-validation-for="ChefId"></span>
        </div>
        <div class="form-group">
            <label asp-for="Name">Recipe Name:</label>
            <input class="form-control" asp-for="Name">
            <span class="alert-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Calories">Calories:</label>
            <input class="form-control" asp-for="Calories">
            <span class="alert-danger" asp-validation-for="Calories"></span>
        </div>
        <div class="form-group">
            <label for="Tastiness">Tastiness:</label>
            <input type="range" min="1" max="5" class="form-range" asp-for="Tastiness">
            <span class="alert-danger" asp-validation-for="Tastiness"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">Description:</label>
            <input class="form-control" asp-for="Description">
            <span class="alert-danger" asp-validation-for="Description"></span>
        </div>

        <input type="submit" class="btn btn-success">
    </form>
</div>